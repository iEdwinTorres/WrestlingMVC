@model IEnumerable<PromotionListItem>
@{
	ViewData["Title"] = "Promotion Index";
}

<h1>Promotion Index</h1>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@item.Name
				</td>
				<td>
					@item.Status
				</td>
			</tr>
		}
	</tbody>
</table>