@model IEnumerable<PromotionListItem>
@{
	ViewData["Title"] = "Promotion List";
}

<h1>Promotions List</h1>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				Active?
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Established)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Retired)
			</th>
			<th>
				Options
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<a asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
				</td>
				<td>
					@item.Status
				</td>
				<td>
					@item.Established
				</td>
				<td>
					@item.Retired
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
					<span>|</span>
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>